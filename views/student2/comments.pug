doctype html
link(rel='stylesheet' href='/css/student2.css')

head
    title Egyptology Comments - student2
body
    h1 Connor Mackin

    h2 
        ul(class="navigation")
            li  
                a(href= "/student2") Return to Egyptology
    section(class= "aSection")
        h3 Comments 
        ul 
            - for (let i = 0; i < comments.length; i++ )
                li= comments[i].comment
                    form(action="/student2/comments/delete", method="post")
                        input(type="hidden", name="id" value=comments[i].id)
                        input(type="submit", value="Delete Comment")
                        a(href= "/student2/comments/edit/" + comments[i].id)   Edit Comment
    section(class= "aSection")
        h2 Add A Comment 
        form(action="/student2/comments/add", method="post")
            input(type="text" name="comment" placeholder="Write your Comment" required)
            button(type="submit") Add Comment